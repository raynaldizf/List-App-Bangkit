        <item name="colorPrimary">@color/design_default_color_on_primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor" tools:targetApi="l">@color/black</item>
        <item name="android:textColorHighlight">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_on_primary</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#424242</item>
