<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MovieDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_primary"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_24"
            />

        <TextView
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Movie"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?android:textColor"
            />



    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgMovie"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgMovie"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:textColorHighlight"
                android:text="Judul : "
                />

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgMovie"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/txtDirector"
                android:textSize="20sp"
                android:textColor="?android:textColorHighlight"
                android:text="Aladin"
                />

            <TextView
                android:id="@+id/txtDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:textColorHighlight"
                android:text="Director : "
                />

            <TextView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/txtDirector"
                android:textSize="20sp"
                android:textColor="?android:textColorHighlight"
                android:text="JamalUdin"
                />

            <TextView
                android:id="@+id/txtWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/director"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:textColorHighlight"
                android:text="Writer : "
                />

            <TextView
                android:id="@+id/writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/director"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/txtDirector"
                android:textSize="20sp"
                android:textColor="?android:textColorHighlight"
                android:text="Alan, Simas, Sumir"
                />

            <TextView
                android:id="@+id/txtSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/writer"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:textColorHighlight"
                android:text="Synopsis : "
                />


            <TextView
                android:id="@+id/synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSynopsis"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="?android:textColorHighlight"
                android:text="JamalUdin"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>